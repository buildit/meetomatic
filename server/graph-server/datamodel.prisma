type User {
  id: ID! @unique @id
  name: String!
  email: String!
  password: String!
}

type Vote {
  id: ID! @unique @id
  owner: User!
  upvote: Boolean!
  card: Card!
  createdAt: DateTime! @createdAt
}

type Card {
  id: ID! @unique @id
  description: String!
  votes: [Vote]
  owner: User!
  column: Column!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Column {
  id: ID! @unique @id
  owner: User!
  name: String!
  cards: [Card]!
  board: Board!
}

type Board {
  id: ID! @unique @id
  name: String!
  password: String!
  owner: User!
  columns: [Column]!
  maxVotes: Int! @default(value: 6)
}
